<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.ajai.betravel.MenuKuliner.menu_kuliner">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.ajai.betravel.MenuKuliner.menu_kuliner" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/kuliner_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Pendap -->
            <android.support.v7.widget.CardView
                android:id="@+id/kuliner_pendapikan"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="4.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/kuliner_pendapikanimage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kuliner_pendap"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/kuliner_pendapikantext1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Rumah Makan"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/kuliner_pendapikantext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kuliner_pendapikantext1"
                            android:layout_alignStart="@+id/kuliner_pendapikantext1"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/roboto"
                            android:text="Pendap"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/kuliner_pendapikantext4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kuliner_pendapikantext1"
                            android:layout_alignStart="@+id/kuliner_pendapikantext1"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="48dp"
                            android:fontFamily="@font/roboto"
                            android:text="Sawah Lebar, Ratu Samban" />

                        <TextView
                            android:id="@+id/kuliner_pendapikantext3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/kuliner_pendapikantext5"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="roboto"
                            android:text="Rp 30.000"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/kuliner_pendapikantext5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/kuliner_pendapikantext3"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="roboto"
                            android:text="..." />
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Bagar Hiu -->
            <android.support.v7.widget.CardView
                android:id="@+id/kuliner_bagar"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="4.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/kuliner_bagarimage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kuliner_bagarhiu"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/kuliner_bagartext1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Rumah Makan"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/kuliner_bagartext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kuliner_bagartext1"
                            android:layout_alignStart="@+id/kuliner_bagartext1"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/roboto"
                            android:text="Bagar Hiu"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/kuliner_bagartext4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kuliner_bagartext1"
                            android:layout_alignStart="@+id/kuliner_bagartext1"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="48dp"
                            android:fontFamily="@font/roboto"
                            android:text="Sawah Lebar, Ratu Samban" />

                        <TextView
                            android:id="@+id/kuliner_bagartext3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/kuliner_bagartext5"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="roboto"
                            android:text="Rp 45.000"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/kuliner_bagartext5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/kuliner_bagartext3"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="roboto"
                            android:text="..." />
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Gulai Kemba'ang -->
            <android.support.v7.widget.CardView
                android:id="@+id/kuliner_gkembaang"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="4.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/kuliner_gkembaangimage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kuliner_gulaikembang"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/kuliner_gkembaangtext1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Rumah Makan"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/kuliner_gkembaangtext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kuliner_gkembaangtext1"
                            android:layout_alignStart="@+id/kuliner_gkembaangtext1"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/roboto"
                            android:text="Gulai Kembang"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/kuliner_gkembaangtext4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kuliner_gkembaangtext1"
                            android:layout_alignStart="@+id/kuliner_gkembaangtext1"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="48dp"
                            android:fontFamily="@font/roboto"
                            android:text="Sawah Lebar, Ratu Samban" />

                        <TextView
                            android:id="@+id/kuliner_gkembaangtext3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/kuliner_gkembaangtext5"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="roboto"
                            android:text="Rp 40.000"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/kuliner_gkembaangtext5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/kuliner_gkembaangtext3"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="roboto"
                            android:text="..." />
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Rebung Asam -->
            <android.support.v7.widget.CardView
                android:id="@+id/kuliner_rasam"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="4.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/kuliner_rasamimage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kuliner_rebungasam"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/kuliner_rasamtext1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Rumah Makan"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/kuliner_rasamtext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kuliner_rasamtext1"
                            android:layout_alignStart="@+id/kuliner_rasamtext1"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/roboto"
                            android:text="Rebung Asam"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/kuliner_rasamtext4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/kuliner_rasamtext1"
                            android:layout_alignStart="@+id/kuliner_rasamtext1"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="48dp"
                            android:fontFamily="@font/roboto"
                            android:text="Sawah Lebar, Ratu Samban" />

                        <TextView
                            android:id="@+id/kuliner_rasamtext3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/kuliner_rasamtext5"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="roboto"
                            android:text="Rp 25.000"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/kuliner_rasamtext5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/kuliner_rasamtext3"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="roboto"
                            android:text="..." />
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            
        </LinearLayout>

    </ScrollView>
</LinearLayout>